<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_firts"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CCCCCC"
    tools:context="com.example.notwall.FirtsFragment"
    app:layout_constraintBottom_toTopOf="@id/bottom_navigation">




    <EditText
        android:id="@+id/escribeNota"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:hint="Escribe..."
        android:textColorHint="#40000000"
        android:gravity="start"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/eliminar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/eliminar"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/eliminarr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/restaurar"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/restaurar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/eliminar"
        app:layout_constraintEnd_toStartOf="@id/guardar"
        />

    <ImageButton
        android:id="@+id/guardar"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/guardarr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>